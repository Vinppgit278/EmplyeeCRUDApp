@model PaginatedList<Employee>

@{
    ViewData["Title"] = "Index";
}

<h1>Employees List with all detail</h1>
<h2>TestByGitChanges</h2>
<p>
    <a asp-action="Create">Create New Employee</a>
</p>
<form asp-action="Index" method="get">
    <div class="input-group mb-3">
        <input type="text" name="searchString" value="@ViewBag.CurrentFilter"
               class="form-control" placeholder="Search by Name, Department, Email..." />

        <button class="btn btn-primary" type="submit">Search</button>
        <a asp-action="Index" class="btn btn-secondary">Clear</a>
    </div>
</form>
 <br />

<div class="table-responsive">
    <table class="table table-striped table-bordered align-middle">
        <thead class="table-dark">
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewBag.FirstNameSort">First Name</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewBag.LastNameSort">Last Name</a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Gender)
            </th>
            <th>
                DOB
                <a asp-action="Index" asp-route-sortOrder="@ViewBag.DOBSort">Sort</a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Phone)
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewBag.DeptSort">Department</a>
            </th> 
            <th>
                @Html.DisplayNameFor(model => model[0].Countries.CountryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].States.StateName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Cities.CityName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].PinCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].PhotoPath)
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewBag.HobbySort">Hobbies1</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.DOB)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
             <td>
                @Html.DisplayFor(modelItem => item.Departments.DepartmentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Countries.CountryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.States.StateName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cities.CityName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PinCode)
            </td>
            <td>                
                    <img src="~/images/@item.PhotoPath"
                         alt="Photo"
                         width="60" height="60"
                         class="img-thumbnail" /><br />
                    @Html.DisplayFor(modelItem => item.PhotoPath)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hobbies)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.EmployeeId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.EmployeeId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.EmployeeId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>
<br />

<nav aria-label="Page navigation">
    <ul class="pagination">

        @if (Model.HasPreviousPage)
        {
            <li class="page-item">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-pageNumber="@(Model.PageIndex - 1)"
                   asp-route-sortOrder="@ViewBag.CurrentSort">
                    Previous
                </a>
            </li>
        }
        else
        {
            <li class="page-item disabled">
                <span class="page-link">Previous</span>
            </li>
        }

        <li class="page-item disabled">
            <span class="page-link">
                Page @Model.PageIndex of @Model.TotalPages
            </span>
        </li>

        @if (Model.HasNextPage)
        {
            <li class="page-item">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-pageNumber="@(Model.PageIndex + 1)"
                   asp-route-sortOrder="@ViewBag.CurrentSort">
                    Next
                </a>
            </li>
        }
        else
        {
            <li class="page-item disabled">
                <span class="page-link">Next</span>
            </li>
        }

    </ul>
</nav>

